services:
  backend:
    container_name: backend_prod
    image: docker-backend:prod
    build:
      dockerfile: infra/docker/Dockerfile
      target: prod
    environment:
      SUPABASE_SECRET_KEY: ${SUPABASE_SECRET_KEY}
      SUPABASE_AUTH_TEST_PASSWORD: ${SUPABASE_AUTH_TEST_PASSWORD}
    env_file:
      - ../../envs/.env.base
      - ../../envs/.env.prod
